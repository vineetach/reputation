<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/navigation_cell_marginBottom">

        <ImageView
            android:id="@+id/navigation_cell_image"
            android:layout_width="@dimen/navigation_cell_image_width"
            android:layout_height="@dimen/navigation_cell_image_height"
            android:layout_centerVertical="false"
            android:layout_marginBottom="@dimen/navigation_cell_marginBottom"
            android:layout_marginLeft="@dimen/navigation_cell_marginLeft"
            android:layout_marginRight="@dimen/navigation_cell_marginRight"
            android:layout_marginTop="@dimen/navigation_cell_marginTop"
            android:background="@color/grey"
            android:contentDescription="@string/cell_image" />

        <TextView
            android:id="@+id/navigation_cell_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/navigation_cell_marginBottom"
            android:layout_marginLeft="@dimen/navigation_cell_marginLeft"
            android:layout_marginRight="@dimen/navigation_cell_marginRight"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/navigation_cell_image"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/grey" >
    </FrameLayout>

    <!-- <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/grey" >
    </FrameLayout> -->

